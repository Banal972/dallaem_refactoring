{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "types": ["cypress"]
  },
  "include": [
    "postcss.config.mjs",
    "next.config.mjs",
    "src/types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "__mocks__/svgrMock.jsx",
    "cypress.config.ts",
    "cypress/**/*.tsx",
    "cypress"
  ],
  "exclude": ["node_modules"]
}
